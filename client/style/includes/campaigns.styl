
.dropzone-campaign-photo
  width 100px
  height 100px

.campaign-photo,.dropzone-campaign-photo
  display inline-block
  float left
  position relative
  padding-right 4px
  .btn-delete
    background-color #F97619
    color $c-white
    border-radius 30px
    padding-left 5px
    padding-right 5px
    padding-top 1px
    padding-bottom 1px
    position absolute
    right 5px
    top 5px
  img
    max-width 100px
    max-height 100px

.campaign-donation
  text-align left
  background-color #F9F7F7
  .campaign-donation-amount
    color #0FE00F
    font-weight bolder
    font-size 17px
  h6
    color grey


.donor-photo
  border-radius 30px
  width 50px
  height 50px
  overflow hidden
  img
    width 100%
    height 100%
