
.dropzone-campaign-photo
  width 100px
  height 100px

.campaign-photo,.dropzone-campaign-photo
  display inline-block
  float left
  position relative
  padding-right 4px
  .btn-delete
    background-color #F97619
    color $c-white
    border-radius 30px
    padding-left 5px
    padding-right 5px
    padding-top 1px
    padding-bottom 1px
    position absolute
    right 5px
    top 5px
  img
    max-width 100px
    max-height 100px

.campaign-donation
  text-align left
  background-color #F9F7F7
  min-height 70px
  margin-bottom 5px
  position relative

.campaign-donation-statement
  position absolute
  left 70px
  top 10px
  font-size 17px

.campaign-donation-amount
  color #0ECC0E
  font-weight bolder
  font-size 17px

.campaign-donation-thank
  position absolute
  right 15px
  top 15px

.campaign-donation-created
  position absolute
  top 35px
  left 70px
  color #BBB9B9

.campaign-donation-photo
  position absolute
  left 10px
  top 10px
  border-radius 30px
  width 50px
  height 50px
  overflow hidden
  img
    width 100%
    height 100%
